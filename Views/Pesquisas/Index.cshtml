                </svg>
        </span>
    <input id="inputSearch" type="text" class="form-control" list="frutas"
    aria-describedby="addon-wrapping" placeholder="Digite o nome do filme">
    <datalist id="frutas">
        <option value="Maçã"></option>
        <option value="Banana"></option>
        <option value="Laranja"></option>
        <option value="Manga"></option>
        <option value="Uva"></option>
    </datalist>
