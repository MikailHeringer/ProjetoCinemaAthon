@model dynamic

@{
    var lista = Json.Serialize(Model);
    ViewData["Title"] = "Index";
}
<script src="~/js/Pesquisa.js"></script>
<script> var itens = @Html.Raw(lista); </script>


<style>
    *{
        // border: 1px solid black;
