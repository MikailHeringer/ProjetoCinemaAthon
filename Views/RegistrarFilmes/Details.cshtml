@model ProjetoCinemaAthon.Models.RegistrarFilme

@{
    ViewData["Title"] = "Details";
}

<style>
    *{
        border: 1px solid black;
    }
</style>

<h1>Detalhes</h1>
<div class="card mb-3" style="max-width: 1300px;">
    <div class="row g-0">
        <div class="col-md-3">
            <img src="@Model.LinkCapa" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body ">

                <dl class="row">

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Titulo)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Titulo)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.DtLancamento)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.DtLancamento)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Diretor)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Diretor)
                    </dd>
                    <dt class="col-sm-4">
                        Generos
                    </dt>
                    <dd class="col-sm-6">
                        @string.Join(", ", Model.VinculoFilmeGenero.Select(g => g.CadastroGenero.Nome))
                    </dd>

                    <div class="col-md-4 align-content-center" style="font-weight:bold">Nome do Ator</div>
                    <div class="col-md-6 align-content-center" style="font-weight:bold">Personagem</div>
                    <div class="personagens">

                        <div class="row" style="margin-top: 5px" id="2">
                            <div class="col-md-4 align-content-center">Chris Evans</div>
                            <div class="col-md-6"> Personagem</div>
                            <div class="col-md-2 text-center"> Exibir Detalhes</div>
                        </div>

                    </div>
                </dl>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
