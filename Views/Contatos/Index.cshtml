@model IEnumerable<ProjetoCinemaAthon.Models.Contato>

@{
    ViewData["Title"] = "Index";
}

<h5><strong>@Model.Count()</strong>: 
    @if (@Model.Count() == 1)
    {
        <span>Mensagem recebida</span>
    }
    else
    {
        <span>Mensagens recebidas</span>
    }
</h5>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assunto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mensagem)
            </th>
            <th>
                Data do envio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="align-content-center align-middle">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assunto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mensagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEnvio)
            </td>
            <td>
                <!--<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |-->
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-primary">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
