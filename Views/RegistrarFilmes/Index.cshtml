@model IEnumerable<ProjetoCinemaAthon.Models.RegistrarFilme>

@{
    ViewData["Title"] = "Index";
}

<style>
    *{
       // border:1px solid black;
    }
</style>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Capa
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DtLancamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diretor)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody class="align-content-center align-middle">
@foreach (var item in Model) {
            <tr>
            <td>
                    <img src="@item.LinkCapa" width="45" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtLancamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diretor)
            </td>
            <td>

                    <div class="btn-group" role="group" aria-label="Basic example">

                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                    </div>
            </td>
        </tr>
}


    </tbody>
</table>
