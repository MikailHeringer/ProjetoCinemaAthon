@model IEnumerable<ProjetoCinemaAthon.Models.RegistrarFilme>

@{
    ViewData["Title"] = "Index";
}

<style>
    *{
       // border:1px solid black;
    }
</style>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Novo</a>
</p> 
<p> <strong>@Model.Count()</strong>: Filmes cadastrados</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Capa
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DtLancamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diretor)
            </th>

            
            <th></th>
        </tr>
    </thead>
    <tbody class="align-content-center align-middle">
@foreach (var item in Model) {
            <tr>
            <td>
                    <img src="@item.LinkCapa" width="45" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtLancamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diretor)
            </td>
            <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                    </div>
            </td>
        </tr>
}


    </tbody>
</table>

<script>

    function setStyle() {
        let alert = document.getElementsByClassName("msgBox")[0];
        window.setTimeout(() => {
            alert.setAttribute("class", "msgBox ON");
        }, 1000);

        window.setTimeout(() => {
            alert.setAttribute("class", "msgBox OFF");
        }, 5000);
    };
</script>

<style>
    .msgBox{
        position: fixed;
        top: 6.5%;
        left: 0.2%;
        opacity: 0;
    }
    .ON{
        position: fixed;
        top: 6.5%;
        left: 0.2%;
        opacity:1;
        transition: opacity 0.8s ease, visibility 0.8s ease;
    }

    .OFF {
        position: fixed;
        top: 6.5%;
        left: 0.2%;
        opacity: 0;
        transition: opacity 0.8s ease, visibility 0.8s ease;
    }
</style>

<div class="msgBox">
    @if (ViewBag.Message != null)
    {
        if (ViewBag.Message == "false")
        {
            <div class="alert alert-danger" role="alert">
                Filme já cadastrado.
            </div>
            <script>setStyle();</script>
        }
    }
</div